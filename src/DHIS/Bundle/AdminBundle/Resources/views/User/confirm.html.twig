{% extends 'DHISAdminBundle::layout.html.twig' %}

{% block page_title 'Confirm user&apos;s profile - Admin' %}
{% block product_name 'Admin' %}
{% block content_title 'Confirm user&apos;s profile' %}

{% set menu = 'admin' %}
{% set sidebar_menu = 'admin_user' %}

{% block content %}

<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>Name</th>
      <td>{{ user.displayname }}</td>
    </tr>
    <tr>
      <th>Username</th>
      <td>{{ user.username }}</td>
    </tr>
    <tr>
      <th>Mail</th>
      <td>{{ user.email }}</td>
    </tr>
    <tr>
      <tH>Enable</th>
      <td>{% if user.isActive %}yes{% else %}no{% endif %}</td>
    </tr>
    <tr>
      <tH>Lock</th>
      <td>{% if user.isLock %}yes{% else %}no{% endif %}</td>
    </tr>
    <tr>
      <th>Groups</th>
      <td>
      {% for group in user.groups %}
        {{ group.name }}<br>
      {% endfor %}
    </td>
    </tr>
  </tbody>
</table>

<form action="{{ path('admin_user_confirm') }}" method="post">
  <div class="form-actions">
      <a href=javascript:history:back() class="btn">&laquo; Back</a>
      <input type="submit" class="btn btn-primary" value="Submit">
  </div>
</form>
{% endblock %}
