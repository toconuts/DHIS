{% extends 'DHISAdminBundle::layout.html.twig' %}

{% block page_title 'Update User&apos;s profile - Admin' %}
{% block product_name 'Admin' %}
{% block content_title 'Update User&apos;s profile' %}

{% set menu = 'admin' %}
{% set sidebar_menu = 'admin_user' %}

{% block content %}
{% if app.request.session.hasFlash('success') %}
<div class="alert alert-success">
  {{ app.request.session.getFlash('success') }}
</div>
{% endif %}

<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>ID</th>
      <td>{{ user.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ user.displayname }}</td>
    </tr>
    <tr>
      <th>Username</th>
      <td>{{ user.username }}</td>
    </tr>
    <tr>
      <th>Mail</th>
      <td>{{ user.email }}</td>
    </tr>
    <tr>
      <tH>Enable</th>
      <td>{% if user.isActive %}yes{% else %}no{% endif %}</td>
    </tr>
    <tr>
      <tH>Lock</th>
      <td>{% if user.isLock %}yes{% else %}no{% endif %}</td>
    </tr>
    <tr>
      <th>Created at</th>
      <td>{{ user.createdAt|date('Y/m/d') }}</td>
    </tr>
    <tr>
      <th>Updated at</th>
      <td>{{ user.updatedAt|date('Y/m/d') }}</td>
    </tr>
    <tr>
      <th>Groups</th>
      <td>
      {% for group in user.groups %}
        <a href="{{ path('admin_group_show', {'id': group.id}) }}">{{ group.name }}</a><br>
      {% endfor %}
    </td>
    </tr>
  </tbody>
</table>
  <div class="form-actions">
      <a href="{{ pre_url }}" class="btn">&laquo; Back</a>
  </div>

{% endblock %}
