{% extends 'DHISAdminBundle::layout.html.twig' %}

{% block page_title 'Users - Admin' %}
{% block product_name 'Admin' %}
{% block content_title 'Users' %}

{% set menu = 'admin' %}
{% set sidebar_menu = 'admin_user' %}

{% block content %}
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mail</th>
      <th>Enable</th>
      <th>Lock</th>
      <th>Group</th>
    </tr>
  </thead>
  <tbody>
    {% for user in pagination %}
    <tr>
      <td><a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ user.displayname }}</a></td>
      <td>{{ user.email }}</td>
      <td>{% if user.isActive %}yes{% else %}no{% endif %}</td>
      <td>{% if user.isLock %}yes{% else %}no{% endif %}</td>
      <td>
        {% for group in user.groups %}
          {{ group.name }}<br>
        {% endfor %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{{ pagination.render()|raw }}
{% endblock %}
