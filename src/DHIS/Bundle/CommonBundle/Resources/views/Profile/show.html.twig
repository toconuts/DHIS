{% extends 'DHISCommonBundle::layout.html.twig' %}

{% block page_title 'User&apos;s details - Profile' %}
{% block product_name 'Common' %}
{% block content_title 'User&apos;s detals' %}

{% set menu = 'common_profile' %}
{% set sidebar_menu = 'common_profile' %}

{% block content %}
<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>ID</th>
      <td>{{ user.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ user.displayname }}</td>
    </tr>
    <tr>
      <th>Username</th>
      <td>{{ user.username }}</td>
    </tr>
    <tr>
      <th>Mail</th>
      <td>{{ user.email }}</td>
    </tr>
    <tr>
      <tH>Enable</th>
      <td>{% if user.isActive %}yes{% else %}no{% endif %}</td>
    </tr>
    <tr>
      <tH>Lock</th>
      <td>{% if user.isLock %}yes{% else %}no{% endif %}</td>
    </tr>
    <tr>
      <th>Created at</th>
      <td>{{ user.createdAt|date('Y/m/d') }}</td>
    </tr>
    <tr>
      <th>Updated at</th>
      <td>{{ user.updatedAt|date('Y/m/d') }}</td>
    </tr>
    <tr>
      <th>Groups</th>
      <td>
      {% for group in user.groups %}
        {{ group.name }}<br>
      {% endfor %}
    </td>
    </tr>
  </tbody>
</table>

<form action="{{ path('common_profile_edit') }}">
  <div class="form-actions">
      <input type="submit" class="btn btn-primary" value="Edit">
  </div>
</form>

{% endblock %}
