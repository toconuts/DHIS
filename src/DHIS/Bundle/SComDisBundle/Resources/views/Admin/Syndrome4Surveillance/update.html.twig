{% extends 'DHISSComDisBundle::layout.html.twig' %}

{% block page_title 'Syndromic Surveillance - Syndrome - SComDis' %}
{% block product_name 'SComDis' %}
{% block content_title 'Syndromic Surveillance - Syndrome - Confirmation' %}

{% set menu = 'SComDis' %}
{% set sidebar_menu = 'scomdis_admin_syndrome4surveillance' %}

{% block content %}
{% if app.request.session.hasFlash('success') %}
<div class="alert alert-success">
  {{ app.request.session.getFlash('success') }}
</div>
{% endif %}
{% if app.request.session.hasFlash('error') %}
<div class="alert alert-error">
  {{ app.request.session.getFlash('error') }}
</div>
{% endif %}

<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>ID</th>
      <td>{{ syndrome.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ syndrome.name }}</td>
    </tr>
    <tr>
      <th>Display ID</th>
      <td>{{ syndrome.displayId }}</td>
    </tr>
  </tbody>
</table>
  <div class="form-actions">
      <a href="{{ pre_url }}" class="btn">&laquo; Back</a>
  </div>

{% endblock %}
