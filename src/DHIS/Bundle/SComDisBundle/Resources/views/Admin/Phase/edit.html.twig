{% extends 'DHISSComDisBundle::layout.html.twig' %}

{% block page_title 'Syndromic Surveillance - Phase - SComDis' %}
{% block product_name 'SComDis' %}
{% block content_title 'Syndromic Surveillance - Phase - Edit' %}

{% set menu = 'SComDis' %}
{% set sidebar_menu = 'scomdis_admin_phase' %}

{% block content %}
{% if app.request.session.hasFlash('success') %}
<div class="alert alert-success">
  {{ app.request.session.getFlash('success') }}
</div>
{% endif %}
{% if app.request.session.hasFlash('error') %}
<div class="alert alert-error">
  {{ app.request.session.getFlash('error') }}
</div>
{% endif %}
<form action="{{ path('scomdis_admin_phase_edit', {'id': phase.id}) }}" method="post" class="form-horizontal">
  {{ form_errors(form) }}
    <div class="control-group {% if form.threshold.get('errrors') %}error{% endif %}">
      <label class="control-label">Phase</label>
      <div class="controls">
        {{ form_errors(form.threshold) }}
        {{ form_widget(form.threshold) }}
      </div>
    </div>
    <div class="control-group {% if form.color.get('errrors') %}error{% endif %}">
      <label class="control-label">Color</label>
      <div class="controls">
        {{ form_errors(form.color) }}
        {{ form_widget(form.color) }}
      </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-actions">
      <a href=javascript:history:back() class="btn">&laquo; Cancel</a>
      <input type="submit" class="btn btn-primary" value="Confirm">
    </div>
</form>
{% endblock %}
