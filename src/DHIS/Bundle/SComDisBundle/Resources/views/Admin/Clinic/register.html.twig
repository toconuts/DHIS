{% extends 'DHISSComDisBundle::layout.html.twig' %}

{% block page_title 'Syndromic Surveillance - Clinic - SComDis' %}
{% block product_name 'SComDis' %}
{% block content_title 'Syndromic Surveillance - Clinic - New' %}

{% set menu = 'SComDis' %}
{% set sidebar_menu = 'scomdis_admin_clinic' %}

{% block content %}
{% if app.request.session.hasFlash('success') %}
<div class="alert alert-success">
  {{ app.request.session.getFlash('success') }}
</div>
{% endif %}
{% if app.request.session.hasFlash('error') %}
<div class="alert alert-error">
  {{ app.request.session.getFlash('error') }}
</div>
{% endif %}
<form action="{{ path('scomdis_admin_clinic_register') }}" method="post" class="form-horizontal">
  {{ form_errors(form) }}
    <div class="control-group {% if form.id.get('errors') %}error{% endif %}">
      <label class="control-label">ID</label>
      <div class="controls">
        {{ form_errors(form.id) }}
        {{ form_widget(form.id) }}
      </div>
    </div>
    <div class="control-group {% if form.name.get('errrors') %}error{% endif %}">
      <label class="control-label">Name</label>
      <div class="controls">
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
      </div>
    </div>
    <div class="control-group {% if form.code.get('errors')%}error{% endif %}">
      <label class="control-label">Code</label>
      <div class="controls">
        {{ form_errors(form.code) }}
        {{ form_widget(form.code) }}
      </div>
    </div>
    <div class="control-group {% if form.sentinelSite.get('errors')%}error{% endif %}">
      <label class="control-label">SentinelSite</label>
      <div class="controls">
        {{ form_errors(form.sentinelSite) }}
        {{ form_widget(form.sentinelSite) }}
      </div>
    </div>
    <div class="control-group {% if form.district.get('errors')%}error{% endif %}">
      <label class="control-label">District</label>
      <div class="controls">
        {{ form_errors(form.district) }}
        {{ form_widget(form.district) }}
      </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-actions">
      <a href=javascript:history:back() class="btn">&laquo; Cancel</a>
      <input type="submit" class="btn btn-primary" value="Confirm">
    </div>
</form>
{% endblock %}
