<div class="control-group {% if form.surveillanceItems.get('errors') %}error{% endif %}">
  <table class="table table-striped table-bordered">
    <thead>
      <th>Syndromes</th>
      <th>Sun.</th>
      <th>Mon.</th>
      <th>Tue.</th>
      <th>Wed.</th>
      <th>Thu.</th>
      <th>Fri.</th>
      <th>Sat.</th>
      <th>Referrals</th>
    </thead>

    <tbody>
    {% for item in form.surveillanceItems %}
      <tr>
        <td>{{ form_widget(item.syndrome) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.sunday) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.monday) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.tuesday) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.wednesday) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.thursday) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.friday) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.saturday) }}</td>
        <td>{{ form_widget(item.referrals) }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>