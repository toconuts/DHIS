<div class="row">
  <div class="span6">
    <div class="form-actions">
      <a href=javascript:history:back() class="btn">&laquo; Back</a>
      <a href="{{ path('scomdis_surveillance_edit', {'id': surveillance.id}) }}" class="btn btn-success">Edit</a>
      <a href="{{ path('scomdis_surveillance_out_daily_tally_report', {'id': surveillance.id}) }}" class="btn btn-primary">Daily Tally Report</a>
    </div>
  </div>
  <div class="span4">
    <div class="well">
      <h4>Delete this Surveillance</h4>
      <p>Note: once it is deleted, you will not be able to restore it.</p>
      <a href="{{ path('scomdis_surveillance_delete', {'id': surveillance.id}) }}" class="btn btn-danger">Delete</a>
    </div>
  </div>    
</div>

{% endblock %}
