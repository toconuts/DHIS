{% extends 'DHISSComDisBundle::layout.html.twig' %}

{% block page_title 'Surveillance&apos;s details - SComDis' %}
{% block product_name 'SComDis' %}
{% block content_title 'Surveillance&apos;s detals' %}

{% set menu = 'SComDis' %}
{% set sidebar_menu = 'scomdis_surveillance_show' %}

{% block content %}
{% if app.request.session.hasFlash('success') %}
<div class="alert alert-success">
  {{ app.request.session.getFlash('success') }}
</div>
{% endif %}
{% if app.request.session.hasFlash('error') %}
<div class="alert alert-error">
  {{ app.request.session.getFlash('error') }}
</div>
{% endif %}

{% include "DHISSComDisBundle:Surveillance:_show_header_ex.html.twig" %}
{% include "DHISSComDisBundle:Surveillance:_show_items.html.twig" %}

<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>ID</th>
      <td>{{ surveillance.id }}</td>
      <th>Created At</th>
      <td>{{ surveillance.createdAt|date('m/d/Y H:i') }}</td>
      <th>Updated At</th>
      <td>{{ surveillance.updatedAt|date('m/d/Y H:i') }}</td>
    </tr>
  </tbody>
</table>

