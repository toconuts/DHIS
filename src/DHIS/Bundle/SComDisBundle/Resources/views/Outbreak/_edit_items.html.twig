<div class="control-group {% if form.outbreakItems.get('errors') %}error{% endif %}">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Age</th>
        <th colspan="2">< 1</th>
        <th colspan="2">1-4</th>
        <th colspan="2">5-14</th>
        <th colspan="2">15-24</th>
        <th colspan="2">25-44</th>
        <th colspan="2">45-64</th>
        <th colspan="2">65+</th>
      </tr>
      <tr>
        <th>Day of the week</th>
        <th>Fem</th>
        <th>Male</th>
        <th>Fem</th>
        <th>Male</th>
        <th>Fem</th>
        <th>Male</th>
        <th>Fem</th>
        <th>Male</th>
        <th>Fem</th>
        <th>Male</th>
        <th>Fem</th>
        <th>Male</th>
        <th>Fem</th>
        <th>Male</th>
      </tr>
    </thead>

    <tbody>
    {% for item in form.outbreakItems %}
      <tr>
        <td>{{ form_widget(item.dayOfTheWeekString) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup1F) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup1M) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup2F) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup2M) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup3F) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup3M) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup4F) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup4M) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup5F) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup5M) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup6F) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup6M) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup7F) }}</td>
        <td class="input-daily-tally">{{ form_widget(item.ageGroup7M) }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>