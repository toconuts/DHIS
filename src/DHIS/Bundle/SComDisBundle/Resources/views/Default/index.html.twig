{% extends 'DHISSComDisBundle::layout.html.twig' %}

{% block page_title 'Home - SComDis' %}
{% block product_name 'SComDis' %}
{% block content_title 'Welcome to SComDis!' %}
{% set menu = 'scomdis_home' %}

{% block content %}
<p>Choose the menu on the sidebar.</p>

<form action="{{ path('scomdis') }}" method="post">
  {{ form_errors(form) }}
  <fieldset>
    <legend>BBS</legend>
      <div class="controls">
      {{ form_widget(form.message, {'attr': {'class': 'input-xxlarge', 'row': 5, 'placeholder':'Write something...' } }) }}
    </div>
    {{ form_rest(form) }}
    <div class="form-actions">
      <input class="btn btn-primary" type="submit" value="Post">
    </div>

    <table class="table table-striped">
      <tbody>
      {% for bbs in bbsPagination %}
        <tr>
          <th>{{ bbs.username }}</th>
          <td>{{ bbs.updatedAt|date('d/m/Y H:m:s') }}</td>
        </tr>
        <tr>
          <td colspan="2">{{ bbs.message }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
    {{ bbsPagination.render()|raw }}
    
    <legend>What's New</legend>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Date</th>
          <th>Log</th>
          <th>Username</th>
          <th>Level</th>
        </tr>
      </thead>
    <tbody>
      {% for log in logPagination %}
        <tr>
          <td>{{ log.updatedAt|date('d/m/Y H:m:s') }}</td>
          <td>{{ log.message }}</td>
          <td>{{ log.username }}</td>
          {% if log.level == 1 %}
          <td>Info</td>
          {% elseif log.level == 2%}
          <td>Warn</td>
          {% else %}
          <td>Error</td>
          {% endif %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
    {{ logPagination.render()|raw }}
  </fieldset>
</form>

{% endblock %}
